<div class="login-container padding-top-20">
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="col-xs-12">
            <div class="message-bar text-center" id="error-bar"></div>
          </div>
          <h2>Login</h2>
          <input id="name" type="text" class='form-input' placeholder="username" />
          <input id="password" type="password" class='form-input' placeholder="password"/>
          <button class='btn btn-default' onClick="login()">Login</button>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
$('#name, #password').on('keypress', (e) => {
  if (e.keyCode === 13) {
    login()
  }
})
function login() {
  $.ajax({
    method:"post",
    url:"/login",
    data: {name: $('#name').val(), password: $("#password").val()},
    success: res => {
      if (res.error) {
        $('#error-bar').text('username or password are incorrect')
        $('#error-bar').show()
      } else window.location.href = "/"
    }
  })
}
</script>
