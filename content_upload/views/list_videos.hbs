<script>
function delete_video (id) {
  $.ajax({
    method: "post",
    url: "/videos/delete_local",
    data: {id},
    success: res => {
      if (res.error) {}//alert user
      else {
        $.ajax({
          method: "post",
          url: "/videos/delete_jwplayer",
          data: {video_key:id},
          success: res => {
            if (res.error) {}//alert user
            else window.location.href = '/videos/list'
          }
        })
      }
    }
  })
}

function delete_confirmation (id) {
  if (confirm("Are you sure you want to delete this video ?")) {
      delete_video(id)
  }
}
</script>
<div class="row">
  <div class="col-xs-12 col-sm-2 padding-top-20">
    <a href="/videos/" class="btn btn-default full-width"> Back </a>
  </div>
</div>
<div class="row list-container">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">Videos Currently Available</div>
      <table class="table">
        <thead class="thead-inverse">
          <tr>
            <th>Item ID</th>
            <th>Title</th>
            <th>Subtitles</th>
            <th>Ares Course ID</th>
            <th>Course Name</th>
            <th>Semester</th>
            <th>Instructor</th>
            <th>url</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          {{#each videos}}
            <tr>
              <td scope="row">{{this.itemID}}</td>
              <td>{{this.title}}</td>
              <td>{{this.subtitles}}</td>
              <td>{{this.ares_course_ID}}</td>
              <td>{{this.course_name}}</td>
              <td>{{this.semester}}</td>
              <td>{{this.instructor}}</td>
              <td>http://{{../server}}/video?id={{this.obfuscated_itemID}}</td>
              <td><button class="btn btn-warning" onClick="delete_confirmation('{{this.mediaID}}')">Delete</button></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
